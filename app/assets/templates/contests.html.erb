<div class="container-fluid">
  <h1 class="text-center contests-title">Current Contests</h1>
  <div class="jumbotron contests-list" ng-repeat="contest in contests">
     <div class="row">
      <div class="col-md-12 title">
        <h2>{{ contest.title }}</h2>
      </div>
      <a href="#/contests/{{ contest.id }}#top" ng-click="selectContest(contest)"><img ng-src="{{ contest.image_url}}" title="source: imgur.com" id="contests-image"/></a>
    </div>
    <div class="row">
      <div class="col-md-4 prize">
        <h4 class="text-center">Total Prize Money: {{ contest.prize | currency }}</h4>
      </div>
      <div class="col-md-4 deadline">
        <h4 class="text-center">Submission Deadline: (end date)</h4>
      </div>
      <div class="col-md-4 submit">
        <a href="#/contests/{{ contest.id }}#top"><h4 class="text-center" ng-click="selectContest(contest)">Details</h4></a>
      </div>
    </div>
  </div>
</div>
