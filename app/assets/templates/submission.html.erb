<div class="container">
  <div class="jumbotron text-center">
    <div ng-hide="isDone()">
      <p class="lead">Answer the questions below or upload a file.</p>
    </div>
    <h3 class="text-center">{{ currentQuestion.content }}</h3>
    <div ng-hide="isDone()">
      <form name="questionForm" novalidate>
        <div>
          <textarea class="form-control" ng-model="content"></textarea>
          <div class="question-button">
            <button class="btn btn-primary btn-md" ng-click="goToNextQuestion();" ng-disabled="questionForm.$invalid">next question</button>
          </div>
        </div>
      </form>
      <pre>Questions: {{ questions | json }}</pre>
      <pre>Answers: {{ answers | json }}</pre>
      <pre>Answer:  {{ data.answer | json }}</pre>
    </div>
    <div ng-show="isDone()" class="text-center">
      <p>Review your marketing plan and submit your entry</p><br />
      <div ng-repeat="question in questions">
        <p class="question {{ question.active }}">{{ question.content }}</p>
        <p class="answer {{ answers[$index].active }}">{{ answers[$index] }}</p>
      </div>
      <a href="#/contests"><button ng-click="submitAnswers()" class="btn btn-primary btn-md">submit</button></a>
    </div>
  </div>
</div>
